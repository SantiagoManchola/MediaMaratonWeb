---
import MenuItemContainerView from "../components/MenuItemContainerView.astro";
import MenuItemView from "../components/MenuItemView.astro";
import menuItems from "../data/menuItemsData";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
  </head>
  <body>
    <MenuItemContainerView>
      {menuItems.map((item) => <MenuItemView {...item} />)}
    </MenuItemContainerView>
    <slot />
    <div class="text-white">hola</div>
  </body>
</html>
